# Required API keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Optional: model names
OPENAI_MODEL=gpt-5-mini
CLAUDE_MODEL=claude-haiku-4-5
GEMINI_MODEL=gemini-2.5-flash

# OPENAI_MODEL=gpt-5
# CLAUDE_MODEL=claude-4-5-sonnet
# GEMINI_MODEL=gemini-2.5-pro

# Single final author: Judge
JUDGE_VENDOR=openai

# --- Debate setup ---
AGENTS=OpenAI,Claude,Gemini

# To disable tools, set MCP_SERVERS=[].
MCP_SERVERS=["[\"local-stub\"]"]

# Maximum number of MCP tool calls per agent per round
TOOL_BUDGET_PER_ROUND=3

# --- Orchestrator behaviour ---
PARALLEL_ANALYSES=true
BARRIERED_ROUNDS=true